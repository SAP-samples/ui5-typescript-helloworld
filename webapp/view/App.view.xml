<mvc:View
	controllerName="ui5.typescript.helloworld.controller.App"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<App id="app">
		<Page
			title="Hello World"
			id="page">
			<content>
				<IllustratedMessage
					title="Hello World"
					illustrationType="sapIllus-SuccessHighFive"
					enableVerticalResponsiveness="true"
					description="This is a UI5 TypeScript Hello World app">
					<additionalContent>
						<Button
							id="helloButton"
							text="Say Hello"
							press="sayHello" />
					</additionalContent>
				</IllustratedMessage>
			</content>
		</Page>
	</App>

</mvc:View>